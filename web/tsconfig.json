{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@wasm/*": ["public/wasm/pkg/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src"],
  "references": [{ "path": "tsconfig.node.json" }]
}
